<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray"
    android:paddingHorizontal="5dp"
    android:paddingTop="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirmation_dialog_text"
        android:textColor="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical|right"
        android:weightSum="2">
        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/confirmation_dialog_cancel_btn_text"
            android:textColor="@color/confirmationDialogTextColor"
            android:background="@color/transparent"
            android:gravity="center_vertical|right"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/deleteForMeBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/confirmation_dialog_delete_for_me_btn_text"
            android:textColor="@color/confirmationDialogTextColor"
            android:background="@color/transparent"
            android:gravity="center_vertical|right"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>