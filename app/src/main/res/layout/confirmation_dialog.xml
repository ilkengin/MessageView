<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirmation_dialog_text"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical|right">
        <Button
            android:id="@+id/deleteForMeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirmation_dialog_delete_for_me_btn_text"
            android:textColor="@color/confirmationDialogTextColor"
            android:background="@color/transparent"
            android:gravity="center_vertical|right"/>
        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirmation_dialog_cancel_btn_text"
            android:textColor="@color/confirmationDialogTextColor"
            android:background="@color/transparent"
            android:gravity="center_vertical|right"/>
        <Button
            android:id="@+id/deleteForEverybodyBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirmation_dialog_delete_for_everybody_btn_text"
            android:textColor="@color/confirmationDialogTextColor"
            android:background="@color/transparent"
            android:gravity="center_vertical|right"/>
    </LinearLayout>
</LinearLayout>